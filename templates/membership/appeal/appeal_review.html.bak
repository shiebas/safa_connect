{% extends "base.html" %}
{% load i18n %}
{% load static %}
{% load crispy_forms_tags %}

{% bloc                <button type="button"
                        class="btn btn-success mr-2"
                        onclick="handleAppealAction('appealForm', 'uphold', '{% trans 'Are you sure you want to uphold this appeal? This may require federation approval.' %}')">
                    {% trans "Uphold Appeal" %}
                </button>tent %}
<div class="container mt-4">
    <h2>{% trans "Review Transfer Appeal" %}</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">{% trans "Appeal Information" %}</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">{% trans "Transfer" %}</dt>
                <dd class="col-sm-9">{{ appeal.transfer }}</dd>
                
                <dt class="col-sm-3">{% trans "Submitted By" %}</dt>
                <dd class="col-sm-9">{{ appeal.submitted_by }}</dd>
                
                <dt class="col-sm-3">{% trans "Submission Date" %}</dt>
                <dd class="col-sm-9">{{ appeal.appeal_submission_date|date:"d/m/Y H:i" }}</dd>
                
                <dt class="col-sm-3">{% trans "Appeal Reason" %}</dt>
                <dd class="col-sm-9">{{ appeal.appeal_reason }}</dd>
                
                {% if appeal.supporting_document %}
                <dt class="col-sm-3">{% trans "Supporting Document" %}</dt>
                <dd class="col-sm-9">
                    <a href="{{ appeal.supporting_document.url }}" target="_blank">
                        {% trans "View Document" %}
                    </a>
                </dd>
                {% endif %}
            </dl>
        </div>
    </div>

    <form method="post" id="appealForm">
        {% csrf_token %}
        
        <div class="form-group">
            <label for="review_notes">{% trans "Review Notes" %}</label>
            <textarea name="review_notes" id="review_notes" 
                      class="form-control" rows="4" required></textarea>
            <small class="form-text text-muted">
                {% trans "Please provide detailed notes for your decision." %}
            </small>
        </div>

        {% block extra_js %}
        <script>
        function handleAppealAction(formId, action, message) {
            if (confirm(message)) {
                const form = document.getElementById(formId);
                const actionInput = document.createElement('input');
                actionInput.type = 'hidden';
                actionInput.name = 'action';
                actionInput.value = action;
                form.appendChild(actionInput);
                form.submit();
            }
        }
        </script>
        {% endblock %}

        {% if appeal.status == 'PENDING' %}
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" 
                           id="requires_federation_approval" 
                           name="requires_federation_approval">
                    <label class="custom-control-label" for="requires_federation_approval">
                        {% trans "Requires Federation Approval" %}
                    </label>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" name="action" value="uphold" 
                        class="btn btn-success mr-2"
                        onclick='return confirm("{% trans "Are you sure you want to uphold this appeal? This may require federation approval." %}")'>
                    {% trans "Uphold Appeal" %}
                </button>
                
                <button type="submit" name="action" value="dismiss" 
                        class="btn btn-danger mr-2"
                        onclick='return confirm("{% trans "Are you sure you want to dismiss this appeal?" %}")'>
                    {% trans "Dismiss Appeal" %}
                </button>
            </div>
        {% elif appeal.status == 'ESCALATED' and perms.membership.can_review_federation_appeals %}
            <div class="mt-3">
                <button type="submit" name="action" value="federation_approve" 
                        class="btn btn-success mr-2"
                        onclick="return confirm('{% trans "Are you sure you want to approve this appeal at federation level?" %}')">
                    {% trans "Federation Approve" %}
                </button>
                
                <button type="submit" name="action" value="federation_reject" 
                        class="btn btn-danger mr-2"
                        onclick="return confirm('{% trans "Are you sure you want to reject this appeal at federation level?" %}')">
                    {% trans "Federation Reject" %}
                </button>
            </div>
        {% endif %}

        <div class="mt-3">
            <a href="{% url 'membership:appeal_detail' appeal.pk %}" 
               class="btn btn-secondary">
                {% trans "Cancel" %}
            </a>
        </div>
    </form>
</div>
{% endblock %}
